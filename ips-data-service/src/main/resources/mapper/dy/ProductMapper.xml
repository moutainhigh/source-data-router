<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.globalegrow.ips.mapper.dy.ProductMapper">

	<resultMap type="com.globalegrow.ips.bean.ProductInfo"
		id="productInfoMap">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="sku" property="sku" jdbcType="VARCHAR" />
		<result column="shelf_time" property="shelfTime"
			jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id, sku, shelf_time
	</sql>
	<select id="getProductInfos" resultMap="productInfoMap">
		select
		<include refid="Base_Column_List" />
		from p_product_base_info
		where sku = #{sku}
	</select>

	<delete id="deleteProductInfoById" parameterType="Long">
		DELETE FROM
		p_product_base_info WHERE id = #{id}
	</delete>


	<update id="updateProductInfo" parameterType="String">
		update p_product_base_info
		<set>
			<if test="shelfTime != null">
				shelf_time= #{shelfTime,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>

</mapper>
