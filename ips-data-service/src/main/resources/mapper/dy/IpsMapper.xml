<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.globalegrow.ips.mapper.dy.IpsProductMapper">

	<resultMap type="com.globalegrow.ips.bean.ProductBaseInfo"
		id="productBaseInfoMap">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="sku" property="sku" jdbcType="VARCHAR" />
		<result column="spu" property="spu" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id,sku,spu
	</sql>
	<select id="getProductBaseInfos" resultMap="productBaseInfoMap" >
		select
		<include refid="Base_Column_List" />
		from p_product_base_info
		limit #{pstart},#{psize}
	</select>

</mapper>
