<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.globalegrow.ips.mapper.pdm.ProductCatalogMapper">

	<resultMap type="com.globalegrow.ips.bean.ProductCatalog"
		id="productCatalogMap">
		<id column="id" property="catalogId" jdbcType="BIGINT" />
		<result column="name_en" property="nameEn" jdbcType="VARCHAR" />
		<result column="name_ch" property="nameCh" jdbcType="VARCHAR" />
		<result column="path" property="path" jdbcType="VARCHAR" />
	</resultMap>
	
	<resultMap type="com.globalegrow.ips.bean.Product"
		id="productMap">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="goods_sn" property="goodsSn" jdbcType="VARCHAR" />
		<result column="shelf_time" property="shelfTime" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id,name_en ,name_ch,path
	</sql>
	<select id="getProductCatalogs" resultMap="productCatalogMap" >
		select
		<include refid="Base_Column_List" />
		from c_product_catalog
		limit #{pstart},#{psize}
	</select>

      <select id="getProductCatalog" resultMap="productCatalogMap" >
		select
		<include refid="Base_Column_List" />
		from c_product_catalog
		where id=#{id}
	</select>
	
	<select id="getProducts" resultMap="productMap" >
		select
		goods_sn,shelf_time
		from p_product where draft_status = 2
		limit #{pstart},#{psize}
	</select>
</mapper>
